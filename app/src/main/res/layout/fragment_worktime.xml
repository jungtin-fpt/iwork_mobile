<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/appBackgroundColor">
    <FrameLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:background="@drawable/border_frame_while_background_green_border"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:id="@+id/ll_worktime_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/tv_worktime_time_now"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=""/>
                    <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:id="@+id/tv_worktime_first_time_in_work"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Vào làm lúc:"/>
                </LinearLayout>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/ll_worktime_info"
                    android:id="@+id/v_worktime_line"
                    android:background="@color/appColorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_below="@id/v_worktime_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:padding="5dp"
                        android:background="@color/appColorPrimary"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_worktime_work_time"
                            android:textSize="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textColor="#ffffff"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng giờ làm"
                            android:textColor="#ffffff"/>
                    </LinearLayout>
                    <LinearLayout
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/appColorPrimary"
                            android:id="@+id/tv_worktime_break_time"
                            android:textSize="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng giờ nghỉ"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>
    </FrameLayout>


