<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackgroundColor">
    <ScrollView
        android:layout_marginBottom="70dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:gravity="center"
                android:padding="12dp"
                android:paddingLeft="3dp"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:id="@+id/ll_report_dropdown"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/tv_report_month_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tháng: 4"/>
                    <ImageView
                        android:id="@+id/iv_report_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_dropdow_open"/>
                </LinearLayout>

                <Button
                    android:layout_centerVertical="true"
                    android:textColor="@color/appColorPrimary"
                    android:id="@+id/btn_report_tong_quat"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/border_button_while_background"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Tổng quát"/>

            </RelativeLayout>
            <com.github.sundeepk.compactcalendarview.CompactCalendarView
                android:id="@+id/compact_calendar_view"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:compactCalendarTextSize="14sp"
                app:compactCalendarCurrentDayBackgroundColor="@color/appColorPrimary">

            </com.github.sundeepk.compactcalendarview.CompactCalendarView>
            <FrameLayout
                android:background="@drawable/border_frame_while_background_red_border"
                android:id="@+id/frame_report_warning"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:orientation="vertical"
                    android:layout_margin="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/appColorWarning"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_alignParentRight="true"
                        android:drawableLeft="@drawable/ic_warning_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cảnh báo"/>
                    <LinearLayout
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:orientation="vertical"
                        android:weightSum="10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Vào làm trễ, Không đủ giờ làm, Vượt thời gian nghỉ"/>
                        <Button
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:textColor="#FFFFFF"
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Xin ngoại lệ"
                            android:background="@drawable/button_border_red_background"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
            <FrameLayout
                android:visibility="gone"
                android:id="@+id/frame_report_time_in_work"
                android:background="@drawable/border_frame_while_background_green_border"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:id="@+id/tv_report_date_work"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="T2, 08/04/2019"/>
                        <TextView
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:id="@+id/tv_report_start_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Vào làm lúc: 07:30"/>
                    </LinearLayout>

                    <View
                        android:layout_marginTop="5dp"
                        android:id="@+id/v_worktime_line"
                        android:background="@color/appColorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_below="@id/v_worktime_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="5dp"
                            android:background="@color/appColorPrimary"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_report_work_time"
                                android:textSize="30dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="04:30"
                                android:textColor="#ffffff"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tổng giờ làm"
                                android:textColor="#ffffff"/>
                        </LinearLayout>
                        <LinearLayout
                            android:padding="5dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/appColorPrimary"
                                android:id="@+id/tv_report_break_time"
                                android:textSize="30dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00:30"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tổng giờ nghỉ"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:background="@drawable/border_frame_while_background_no_border"
                android:layout_marginBottom="20dp"
                android:id="@+id/ll_report_leave"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_leave_item_date_in_leave"
                        android:padding="10dp"
                        android:background="@color/appTopNavigator"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="3 ngày"/>
                </LinearLayout>
                <RelativeLayout
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/border_textview_radius_white_background"
                        android:id="@+id/tv_leave_item_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nghỉ phép năm"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/tv_leave_item_type"
                        android:text="04/04/2018"
                        android:id="@+id/tv_leave_item_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/appColorWarning"
                        android:id="@+id/tv_leave_item_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chưa duyệt"
                        android:layout_alignParentRight="true"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>